@page
@model DailyLog.RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel="stylesheet" href="~/css/login.css" />
}


<form class="form-signin" method="post" asp-page-handler="save">
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
    </div>

    
    <div class="form-label-group">
        <input asp-for="User.Name" class="form-control" placeholder="Full Name" required autofocus>
        <label asp-for="User.Name">Full Name</label>
        <span asp-validation-for="User.Name"></span>
    </div>

    <div class="form-label-group">
        <input asp-for="User.Email" class="form-control" placeholder="Email address" required autofocus>
        <label asp-for="User.Email">Email address</label>
        <span asp-validation-for="User.Email"></span>
    </div>

    <div class="form-label-group">
        <input asp-for="User.JobTitle" class="form-control" placeholder="Job Title" required autofocus>
        <label asp-for="User.JobTitle">Job Title</label>
        <span asp-validation-for="User.JobTitle"></span>
    </div>

    <div class="form-label-group">
        <input asp-for="User.PhoneNumber" class="form-control" placeholder="Phone Number" required autofocus>
        <label asp-for="User.PhoneNumber">Phone Number</label>
        <span asp-validation-for="User.PhoneNumber"></span>
    </div>

    <div class="form-label-group">
        <input type="password" asp-for="User.Password" class="form-control" placeholder="Password" required>
        <label asp-for="User.Password">Password</label>
        <span asp-validation-for="User.Password"></span>
    </div>

    <button class="btn btn-lg btn-success btn-block" type="submit">Sign Up</button>
</form>
