@page
@model DailyLog.CompanyModel
@{
    ViewData["Title"] = "Company";
}

<h1 class="text-success">Company</h1>
    
@foreach (var log in Model.LogEntities)
{
    <div class="col-md-10">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <h3 class="mb-0">@log.DateCreatedGmt.ToLongDateString()</h3>
                <div class="mb-1 text-muted">Duration @log.DurationInMinutes min</div>
                <div class="mb-1 text-muted">Project: @log.Project.Title</div>
                <div class="mb-1 text-muted">Employee: @log.UserEntity.Name </div>

                <h2><strong class="d-inline-block mb-2 text-success">@log.Title</strong></h2>

                <p class="mb-auto">@log.Details</p>
            </div>
            <div class="col-auto d-none d-lg-block">
                <img class="bd-placeholder-img" width="200" height="250" src="/images/@log.Project.ImagePath??hero.jpg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><rect width="100%" height="100%" fill="#55595c" />
            </div>
        </div>
    </div>
}

