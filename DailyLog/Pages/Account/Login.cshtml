@page
@model DailyLog.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-3 col-lg-4"></div>
    <div class="col-md-6 col-lg-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserInput.LoginEmail"></label>
                <input asp-for="UserInput.LoginEmail" class="form-control">
                <span asp-validation-for="UserInput.LoginEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInput.Password"></label>
                <input asp-for="UserInput.Password" class="form-control">
                <span asp-validation-for="UserInput.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" asp-for="UserInput.RememberMe" />
                    <label class="custom-control-label" asp-for="UserInput.RememberMe">
                        @Html.DisplayNameFor(model => model.UserInput.RememberMe)
                    </label>
                </div>
                <span asp-validation-for="UserInput.RememberMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-success btn-block">Log in</button>
            </div>
        </form>
    </div>
    <div class="col-md-3 col-lg-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

